<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include
        layout="@layout/app_bar"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:minLines="1"
        android:maxLines="8"
        android:layout_below="@+id/txtdateacad"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:background="@drawable/edittext2"
        android:id="@+id/txtcommitteeacad"
        android:gravity="top|left"
        android:layout_alignParentEnd="true"
        android:hint="COMMITTEE NAME AND DESCRIPTION" />

    <Button
        android:text="update"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/btnsaveacad"
        android:layout_below="@+id/txtcommitteeacad"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginTop="141dp"
        android:id="@+id/txtdateacad"
        android:background="@drawable/edittext"
        android:hint="DATE  (DD/MM/YYYY)"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="date" />

    <Button
        android:id="@+id/btndeleteacad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnsaveacad"
        android:background="@drawable/button"
        android:layout_marginStart="54dp"
        android:layout_toEndOf="@+id/btnsaveacad"
        android:text="DELETE" />

</RelativeLayout>
    </ScrollView>