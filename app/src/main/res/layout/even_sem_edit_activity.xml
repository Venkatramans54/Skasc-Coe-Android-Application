<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <include
        layout="@layout/app_bar"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:background="@drawable/edittext2"
        android:gravity="top|left"
        android:layout_below="@+id/datetxtEven"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:id="@+id/scheduletxtEven"
        android:layout_alignParentEnd="true"
        android:hint="SCHEDULE DESCRIPTION" />

    <Button
        android:text="UPDATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_marginTop="37dp"
        android:id="@+id/btnEvenSave"
        android:layout_marginStart="76dp"
        android:layout_below="@+id/scheduletxtEven"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="date"
        android:ems="10"
        android:background="@drawable/edittext"
        android:layout_marginTop="150dp"
        android:id="@+id/datetxtEven"
        android:hint="DATE  (DD/MM/YYYY)"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btndeleteeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnEvenSave"
        android:background="@drawable/button"
        android:layout_marginStart="55dp"
        android:layout_toEndOf="@+id/btnEvenSave"
        android:text="DELETE" />
</RelativeLayout>
    </ScrollView>