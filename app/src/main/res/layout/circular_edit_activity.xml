<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <include
        layout="@layout/app_bar"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="date"
        android:ems="10"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:background="@drawable/edittext"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:id="@+id/datetxtcircular"
        android:layout_alignParentEnd="true"
        android:hint="DATE  (DD/MM/YYYY)" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:background="@drawable/edittext2"
        android:gravity="top|left"
        android:id="@+id/scheduletxtcircular"
        android:hint="SCHEDULE DESCRIPTION"
        android:layout_below="@+id/datetxtcircular"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_marginTop="37dp"
        android:id="@+id/btnsavecircular"
        android:layout_marginStart="68dp"
        android:layout_below="@+id/scheduletxtcircular"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btndeletecircular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnsavecircular"
        android:layout_marginStart="45dp"
        android:background="@drawable/button"
        android:layout_toEndOf="@+id/btnsavecircular"
        android:text="DELETE" />

</RelativeLayout>
    </ScrollView>